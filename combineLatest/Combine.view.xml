<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	controllerName="sap.ui.demo.CombineLatest.Combine">
	<l:VerticalLayout class="sapUiContentPadding">
		<l:HorizontalLayout class="sapUiContentPadding" >
			<Button text="Red" press="onPressRed" />
			<Button text="Black" press="onPressBlack" />
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<Label text="Red:" labelFor="red"/>
			<Text text="{/field_for_text}" id="red"/>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<Label text="Black:" labelFor="black"/>
			<Text text="" id="black"/>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<Label text="Total:" labelFor="total"/>
			<Text text="" id="total"/>
		</l:HorizontalLayout>
	</l:VerticalLayout>
</mvc:View>